{
  "name": "SleepData",
  "type": "object",
  "properties": {
    "date": {
      "type": "string",
      "format": "date",
      "description": "Sleep tracking date"
    },
    "sleep_score": {
      "type": "number",
      "minimum": 0,
      "maximum": 100,
      "description": "Overall sleep quality score"
    },
    "snoring_intensity": {
      "type": "number",
      "minimum": 0,
      "maximum": 100,
      "description": "Snoring intensity in decibels"
    },
    "snoring_severity": {
      "type": "string",
      "enum": [
        "low",
        "moderate",
        "high"
      ],
      "default": "low",
      "description": "Snoring severity level"
    },
    "apnea_risk": {
      "type": "string",
      "enum": [
        "low",
        "medium",
        "high"
      ],
      "default": "low",
      "description": "Sleep apnea risk level"
    },
    "fragmentation_events": {
      "type": "number",
      "minimum": 0,
      "description": "Sleep fragmentation events per hour"
    },
    "total_sleep_time": {
      "type": "number",
      "minimum": 0,
      "description": "Total sleep time in minutes"
    },
    "deep_sleep_percentage": {
      "type": "number",
      "minimum": 0,
      "maximum": 100,
      "description": "Percentage of deep sleep"
    },
    "rem_sleep_percentage": {
      "type": "number",
      "minimum": 0,
      "maximum": 100,
      "description": "Percentage of REM sleep"
    }
  },
  "required": [
    "date",
    "sleep_score"
  ]
}